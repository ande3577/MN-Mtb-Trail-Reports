<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:id="@+id/TableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleBackgroundColor"
        android:stretchColumns="0,1,2,3" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/openInBrowserLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:onClick="onOpenInBrowserClick"
                android:clickable="true"
       			android:background="@drawable/button_selector"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/allReportsOpenInBrowserButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu_goto" />

                <TextView
                    android:id="@+id/allReportsOpenInBrowserLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/allReportsRefreshLabel"
                    android:layout_alignBottom="@+id/allReportsRefreshLabel"
                    android:text="Browser"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/buttonLabelColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/allReportsRefreshLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:gravity="center"
                android:onClick="onRefreshButtonClick"
                android:clickable="true"
       			android:background="@drawable/button_selector"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/allReportsRefreshButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu_refresh" />

                <TextView
                    android:id="@+id/allReportsRefreshLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Refresh"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/buttonLabelColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/allReportsHelpLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:gravity="center"
                android:onClick="onHelpButtonClick"
                android:clickable="true"
       			android:background="@drawable/button_selector"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/allReportsHelpButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_menu_help" />

                <TextView
                    android:id="@+id/helpButtonLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/allReportsRefreshLabel"
                    android:layout_alignBottom="@+id/allReportsRefreshLabel"
                    android:text="Help"
                    android:textColor="@color/buttonLabelColor" />
            </LinearLayout>
        </TableRow>

    </TableLayout>

    <ListView
        android:id="@+android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>